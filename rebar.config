{deps, [
        {bson, ".*", {git, "git://github.com/mongodb/bson-erlang", "HEAD"}},
        {pbkdf2, ".*",{git, "https://github.com/comtihon/erlang-pbkdf2.git", {tag, "2.0.1"}}}
       ]}.

{lib_dirs, ["deps"]}.

{erl_opts, [debug_info %,fail_on_warning
]}.

{clean_files, ["ebin/*.beam", "erl_crash.dump", "doc/*.html", "doc/erlang.png", "doc/edoc-info", "doc/stylesheet.css"]}.

{edoc_opts, [{index_columns, 1}, {sort_functions, false}, {preprocess, true}]}.
